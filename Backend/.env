# Rename this file to `.env` and fill in values appropriate to your
# environment.  These variables configure the backend server, database
# connection, password hashing, and JWT signing. Do not commit your
# actual secrets to version control.

# The port on which the Express server should listen. Defaults to 5000
# if not provided.
PORT=5000

# Connection details for the MySQL database. The database must contain
# the tables defined in db_welfare.sql (employee_welfare_balances,
# welfare_types, welfare_transactions, users, staff_welfare_permission).
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=system_benefits

# The frontâ€‘end origin allowed by CORS. For local development with Vite
# this is typically http://localhost:5173. Separate multiple origins
# with commas if necessary.
FE_ORIGIN=http://localhost:5173

# Secret used to sign JSON Web Tokens. Set this to a strong random
# string in production. Never commit the real secret to source control.
JWT_SECRET=medtutechno

# The default expiration for issued tokens. Accepts any format supported
# by jsonwebtoken (e.g. "1h", "2d"). If not set, tokens expire in 1h.
JWT_EXPIRES_IN=1h

# Number of salt rounds used by bcrypt when hashing passwords. Higher
# values are slower but more secure. The default of 10 is a good balance.
BCRYPT_SALT_ROUNDS=10

